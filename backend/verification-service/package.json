{
  "name": "verification-service",
  "version": "1.0.0",
  "description": "Credential verification microservice for Kube Credential",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "clean": "rimraf dist",
    "dev": "NODE_ENV=development npx tsx watch src/index.ts",
    "dev:cluster": "NODE_ENV=development WORKER_COUNT=3 npx tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:cluster": "WORKER_COUNT=3 node dist/index.js",
    "test": "jest",
    "test:load": "jest tests/load.test.ts --runInBand --detectOpenHandles",
    "test:cluster": "jest tests/cluster.test.ts"
  },
  "keywords": [],
  "author": "Jaimin Detroja",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "better-sqlite3": "^12.4.1",
      "cors": "^2.8.5",
      "dotenv": "^16.4.5",
      "express": "^4.19.2",
      "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.9",
    "@types/express": "^4.17.21",
      "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.12",
    "@types/node": "^24.7.0",
    "@types/supertest": "^2.0.16",
    "jest": "^29.7.0",
    "rimraf": "^6.0.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "^5.9.3"
